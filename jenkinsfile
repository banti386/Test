pipeline {
    agent any 
    stages {
        stage('Build') { 
            steps {
                echo "We are in Build Stage"
            }
        }
        stage('Test') { 
            steps {
                echo "We are in Test Stage"
            }
        }
        stage('Deploy') { 
            steps {
                echo "We are in Deploy Stage"
            }
        }
    }
}
